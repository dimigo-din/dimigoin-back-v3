{
  "name": "dimigoin-back-v3",
  "version": "1.0.0",
  "description": "DIMIGOin Backend Application",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint --fix src/**/*.ts",
    "test": "jest --detectOpenHandles --forceExit",
    "dev": "cross-env NODE_ENV=develop tsc-watch --onSuccess 'node dist/index.js'",
    "serve": "cross-env NODE_ENV=prod node dist/index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ]
  },
  "author": "Seohun Uhm <uhmtotow@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "husky": "^4.2.3",
    "jest": "^26.6.3",
    "lint-staged": "^10.0.8",
    "nodemon": "^1.18.9",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.0",
    "tsc-watch": "^4.2.3"
  },
  "dependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.3",
    "@types/express-fileupload": "^1.1.2",
    "@types/helmet": "^0.0.45",
    "@types/joi": "^14.3.4",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/mongoose": "^5.7.6",
    "@types/node-cron": "^2.0.3",
    "@types/supertest": "^2.0.10",
    "axios": "^0.21.1",
    "bl": "^2.2.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "dot-prop": "^4.2.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-bearer-token": "^2.4.0",
    "helmet": "^3.21.3",
    "joi": "^17.2.1",
    "jsonwebtoken": "^8.5.1",
    "moment-timezone": "^0.5.32",
    "mongodb": "^3.6.0",
    "mongoose": "^5.9.4",
    "node-cron": "^2.0.3",
    "ts-mongoose": "^0.0.21",
    "typescript": "^3.9.7"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.spec\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    },
    "testEnvironment": "node"
  }
}
